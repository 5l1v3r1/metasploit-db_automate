<ruby>
home_dir = Dir.home
directory_name = "#{home_dir}/msf_#{framework.db.workspace.name}_output"
Dir.mkdir(directory_name) unless File.exist?(directory_name)

framework.db.hosts.each do |host|
  host.services.each do |service|
    if service.name == "http" || service.name == "www"
      skipfish_cmd = "skipfish -W /dev/null -b i -o #{directory_name}/msf-skipfish-output-#{host.address}-#{service.port}-http -v -u http://#{host.address}:#{service.port}/"
      print "\n\n"
      print_status "Running skipfish on #{host.address}:#{service.port}"
      print_status "#{skipfish_cmd}"
      run = system skipfish_cmd
    end
  end
end
</ruby>

<ruby>
framework.db.hosts.each do |host|
  host.services.each do |service|
    if service.name == "https" || service.name == "ssl/http" || service.name == "ssl/https"
      skipfish_cmd = "skipfish -W /dev/null -b i -o #{directory_name}/msf-skipfish-output-#{host.address}-#{service.port}-https -v -u https://#{host.address}:#{service.port}/"
      print "\n\n"
      print_status "Running skipfish on #{host.address}:#{service.port}"
      print_status "#{skipfish_cmd}"
      run = system skipfish_cmd
    end
  end
end
</ruby>