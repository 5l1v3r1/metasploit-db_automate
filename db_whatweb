<ruby>
home_dir = Dir.home
directory_name = "#{home_dir}/msf_#{framework.db.workspace.name}_output"
Dir.mkdir(directory_name) unless File.exist?(directory_name)

framework.db.hosts.each do |host|
  host.services.each do |service|
    if service.name == "http" || service.name == "www" || service.name == "http-proxy"
      whatweb_cmd = "ruby whatweb-urbanadventurer/whatweb -a 3 --no-errors http://#{host.address}:#{service.port}/ | tee #{directory_name}/msf-whatweb-output-#{host.address}-#{service.port}-http.txt"
      print "\n\n"
      print_status "Running whatweb on #{host.address}:#{service.port}/http"
      print_status "#{whatweb_cmd}"
      run = system whatweb_cmd
    end
  end
  host.services.each do |service|
    if service.name == "https" || service.name == "ssl/https" || service.name == "ssl/http"
      whatweb_cmd = "ruby whatweb-urbanadventurer/whatweb -a 3 --no-errors https://#{host.address}:#{service.port}/ | tee #{directory_name}/msf-whatweb-output-#{host.address}-#{service.port}-https.txt"
      print "\n\n"
      print_status "Running whatweb on #{host.address}:#{service.port}/https"
      print_status "#{whatweb_cmd}"
      run = system whatweb_cmd
    end
  end
end
</ruby>
