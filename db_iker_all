<ruby>
home_dir = Dir.home
directory_name = "#{home_dir}/msf_#{framework.db.workspace.name}_output"
Dir.mkdir(directory_name) unless File.exist?(directory_name)

framework.db.hosts.each do |host|
  host.services.each do |service|
    iker_cmd = "sudo python iker.py --clientids ikeforce/wordlists/groupnames.dic --output #{directory_name}/msf-iker-output-#{host.address}-500-ike.txt #{host.address}"
    print "\n\n"
    print_status "Running iker on #{host.address}:500"
    print_status "#{iker_cmd}"
    run = system iker_cmd
  end
end
</ruby>
