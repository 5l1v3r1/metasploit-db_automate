<ruby>
home_dir = Dir.home
directory_name = "#{home_dir}/msf_#{framework.db.workspace.name}_output"
Dir.mkdir(directory_name) unless File.exist?(directory_name)

framework.db.hosts.each do |host|
  host.services.each do |service|
    if service.name == "http" || service.name == "www" || service.name == "http-proxy"
      dirb_cmd = "dirb-v0re/dirb http://#{host.address}:#{service.port}/ dirb/wordlists/common.txt -o #{directory_name}/msf-dirb-output-#{host.address}-#{service.port}-http.txt -r"
      print "\n\n"
      print_status "Running dirb on #{host.address}:#{service.port}/http"
      print_status "#{dirb_cmd}"
      run = system dirb_cmd
    end
  end
  host.services.each do |service|
    if service.name == "https" || service.name == "ssl/https" || service.name == "ssl/http"
      dirb_cmd = "dirb-v0re/dirb https://#{host.address}:#{service.port}/ dirb/wordlists/common.txt -o #{directory_name}/msf-dirb-output-#{host.address}-#{service.port}-https.txt -r"
      print "\n\n"
      print_status "Running dirb on #{host.address}:#{service.port}/https"
      print_status "#{dirb_cmd}"
      run = system dirb_cmd
    end
  end
end
</ruby>
